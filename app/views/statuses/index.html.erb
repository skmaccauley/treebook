
<div class="page-header">
  <h1>All of the Statuses</h1>
</div>

<%= link_to "Post a new status", new_status_path, class: "btn btn-success" %>

<!-- This is example of a loop to show all statuses/names -->
<% @statuses.each do |status| %>
<div class="status">
  <!--   This adds the name of the individual with a status -->
  <strong><%= status.name %></strong>
  <p><%= status.content %></p>
  <div class="meta">
  <!-- Add link to the status page -->
  <!--   Using RoR API time_ago_in_words to show the time status was created (status.created_at) -->
    <%= link_to time_ago_in_words(status.created_at) + " ago", status %>
    <span class="admin">
      | <%= link_to "Edit", edit_status_path(status) %> |
        <%= link_to "Delete", status, method: :delete, data: { confirm: "Are you sure you want to delete this status?"} %>
    </span>
  </div>

</div>
<% end %>